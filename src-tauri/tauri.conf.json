{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MD",
  "version": "0.6.0",
  "identifier": "com.fightbulc.md-preview",
  "build": {
    "beforeDevCommand": "bunx vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bunx vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MD",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; img-src 'self' https: data:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["../CHANGELOG.md"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "mimeType": "text/markdown",
        "description": "Markdown Document"
      }
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "desktopTemplate": "md.desktop",
        "section": "utils",
        "depends": []
      }
    }
  }
}
